}

-- Function to load game-specific scripts
local function loadGameScript(placeId)
    local scriptUrl = gameScripts[placeId]
    if scriptUrl then
        loadstring(game:HttpGet(scriptUrl))()
    else
        warn("No script available for this game (PlaceId: " .. placeId .. ")")
    end
end

-- Key validation
local function validateKeyAndLoad()
    -- Replace this logic with your existing key system (as shown in your provided code)
    local key = KeyInput.Text
    local isValidKey = false

    for _, validKey in ipairs(ValidKeys) do
        if key == validKey then
            isValidKey = true
            break
        end
    end

    if isValidKey then
        Status.Text = "Correct Key! Loading script..."
        Status.TextColor3 = Color3.fromRGB(0, 255, 0)
        wait(1)
        ScreenGui:Destroy() -- Remove key UI
        loadGameScript(game.PlaceId) -- Load the script for the current game
    else
        Status.Text = "Invalid Key! Try again."
        Status.TextColor3 = Color3.fromRGB(255, 0, 0)
    end
end

SubmitKey.MouseButton1Click:Connect(validateKeyAndLoad)
